<% if notice %>
  <div class="w3-panel w3-pale-green w3-border">
<p id="notice"><%= notice %></p>
</div>
<% end %>

<h1>Admissions</h1>
<div class="w3-padding">
  <%= link_to 'New Admission', new_admission_path , class: 'w3-btn w3-green w3-round' %>

</div>
<table class="w3-table-all">
  <thead>
    <tr>
      <th>Patient</th>
      <th>Doctor</th>
      <th>Ward</th>
      <th>Date released</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admissions.each do |admission| %>
      <tr>
        <td><%= admission.patient_id %></td>
        <td><%= admission.doctor_id %></td>
        <td><%= admission.ward_id %></td>
        <td><%= admission.date_released %></td>
        <td><%= link_to 'Show', admission , class: 'w3-btn w3-round w3-blue' %></td>
        <td><%= link_to 'Edit', edit_admission_path(admission) , class: 'w3-btn w3-round w3-lime' %></td>
        <td><%= link_to 'Destroy', admission, method: :delete, data: { confirm: 'Are you sure?' } , class: 'w3-btn w3-round w3-red' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

