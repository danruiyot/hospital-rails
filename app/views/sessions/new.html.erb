<% if alert %>
  <div class="w3-panel w3-pale-green">
<p id="alert"><%= alert %></p>
</div>
<% end %>

<div class="login">
<div class="w3-content w3-border w3-padding">
  <h1>Login</h1>
  <hr>
<%= form_tag sessions_path do |form| %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login", class: 'w3-btn w3-round w3-blue' %>
  </div>
<% end %>
</div>
</div>