<% if notice %>
  <div class="w3-panel w3-pale-green">
<p id="notice"><%= notice %></p>
</div>
<% end %>

<h1>Users</h1>

<div class="w3-padding">
<%= link_to 'New User', new_user_path , class: 'w3-btn w3-green w3-round' %>
</div>


<table class="w3-table-all">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Date Of Birth</th>
      <th>Gender</th>
      <th>role</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone %></td>
        <td><%= user.DOB %></td>
        <td><%= user.gender %></td>
        <td>
              <% if user.role == 1 %>
    <%= "Admin" %>
    <% elsif user.role == 2  %>
    <%= "Doctor" %>
    <% elsif user.role == 3  %>
    <%= "Patient" %>
    <% else  %>
    <%= "Unknown user" %>
      
  <% end %>
        </td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: 'w3-btn w3-blue w3-round' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'w3-btn w3-lime w3-round' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'w3-btn w3-red w3-round' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

