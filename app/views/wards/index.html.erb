<% if notice %>
  <div class="w3-panel w3-pale-green w3-border">
<p id="notice"><%= notice %></p>
</div>
<% end %>
<h1>Wards</h1>

<div class="w3-margin">
<%= link_to 'New Ward', new_ward_path, class:'w3-btn w3-green w3-round' %>
  
</div>
<table class="w3-table-all">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wards.each do |ward| %>
      <tr>
        <td><%= ward.name %></td>
        <td><%= link_to 'Show', ward  ,class:'w3-btn w3-blue w3-round'%></td>
        <td><%= link_to 'Edit', edit_ward_path(ward) ,class:'w3-btn w3-lime w3-round' %></td>
        <td><%= link_to 'Destroy', ward, method: :delete, data: { confirm: 'Are you sure?' } ,class:'w3-btn w3-red w3-round' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

